<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.cbec.dao.IManufacturerDao">

  <resultMap id="ManResultMap" type="Manufacturer">
  	<id property="id" column="man_id" />
  	<result property="name" column="man_name"/>
  	<result property="address" column="man_address"/>
  	<result property="scope" column="man_scope"/>
  	<result property="mdesc" column="man_desc"/>
  </resultMap>
  
  <insert id="create" parameterType="Manufacturer">
    insert into MANUFACTURER 
    values(MANUFACTURER_NEXTNO_SQ.nextval,#{name},#{address},#{scope},#{mdesc})
  </insert>
  
  <delete id="delete" parameterType="Manufacturer">
    delete MANUFACTURER 
    where man_id = #{id}
  </delete>
  
  <update id="update" parameterType="Manufacturer">
    update MANUFACTURER 
    set man_name=#{name},man_address=#{address},man_scope=#{scope},man_desc=#{mdesc} 
    where man_id = #{id}
  </update>
  
  <select id="selectListByAll" resultMap="ManResultMap">
    select *
    from MANUFACTURER
  </select>
  
  <select id="selectManufacturerById" parameterType="int" resultType="Manufacturer">
    select man_id id,man_name name,man_address address,man_scope scope,man_desc mdesc
    from MANUFACTURER 
    where man_id=#{id}
  </select>
  
</mapper>