<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.cbec.dao.IProductDao">
  <insert id="create" parameterType = "com.neusoft.cbec.model.ProductModel">
  	insert into PRODUCT(pro_id,pro_name,pro_price,pro_weight,pro_kinds_id,pro_state_id,brand_id,pro_photos_id,pro_desc) 
  	values(PRODUCT_NEXTNO_SQ.nextval,#{pro_name},#{pro_price},#{pro_weight},#{pro_kinds_id},#{pro_state_id},#{brand_id},#{pro_photos_id},#{pro_desc})
  </insert>
  
  <update id="update" parameterType = "com.neusoft.cbec.model.ProductModel">
  	update PRODUCT set pro_name=#{pro_name},pro_price=#{pro_price},pro_weight=#{pro_weight},pro_kinds_id=#{pro_kinds_id},pro_state_id=#{pro_state_id},brand_id=#{brand_id},pro_photos_id=#{pro_photos_id},pro_desc=#{pro_desc}
  </update>
  
  <delete id="delete" parameterType = "com.neusoft.cbec.model.ProductModel">
  	delete from PRODUCT where pro_id=#{pro_id}
  </delete>
  
  <select id="selectListByAll" resultType = "com.neusoft.cbec.model.ProductModel">
  	select pro_name from PRODUCT
  </select>
  
</mapper>